@model Web.Models.UserViewModel

@{ ViewBag.Title = "Заказ покемона"; }

<div class="row mb-5">
    <div class="col-6 m-auto">
        <div class="card m-auto">
            <div class="card-header">
                <h3>Заказ покемона</h3>
            </div>
            <div class="card-body">
                <form method="post" asp-controller="Order" asp-action="CreateOrder" enctype="multipart/form-data">

                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                    <div class="form-group col-12">
                        <label asp-for="Name"></label>
                        <span class="text-danger" asp-validation-for="Name"></span><br />
                        <input class="form-control" asp-for="Name" />
                    </div>

                    <div class="form-group col-12">
                        <label asp-for="Email"></label>
                        <span class="text-danger" asp-validation-for="Email"></span><br />
                        <input class="form-control" type="email" asp-for="Email" />
                    </div>

                    <div class="form-group col-12">
                        <label asp-for="PhoneNumber"></label>
                        <span class="text-danger" asp-validation-for="PhoneNumber"></span><br />
                        <input class="form-control" asp-for="PhoneNumber" />
                    </div>

                    <div class="form-group col-12">
                        <button type="submit" class="btn btn-primary">Заказать</button>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-warning">На главную</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>